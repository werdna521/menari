<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/up_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/up" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_marginVertical="16dp"
            android:src="@drawable/tunak" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphik_medium"
            android:text="@string/tunak_tunak_tun"
            android:textColor="@color/darkThree"
            android:textSize="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphik_regular"
            android:text="@string/daler_mehndi"
            android:textColor="@color/darkThree"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphik_medium"
            android:text="@string/difficulty"
            android:textColor="@color/darkThree"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
        
        <ImageView
            android:layout_width="190dp"
            android:layout_height="24dp"
            android:src="@drawable/rating"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphik_medium"
            android:text="@string/highscore"
            android:textColor="@color/darkThree"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphik_medium"
            android:text="@string/zero"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dance_btn"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:src="@drawable/dance_btn"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"/>
</RelativeLayout>